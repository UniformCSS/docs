{
  "name": "uniformcss",
  "version": "0.9.0",
  "description": "Fully customizable utility-first CSS framework built in Sass. Say good-bye to CSS bloat and start building future-proof sites today.",
  "main": "main.sass",
  "scripts": {
    "uniform:compile": "sass --load-path=./ --no-source-map main.scss ../assets/css/main.css",
    "uniform:watch": "sass --load-path=./ --no-source-map --watch main.scss ../assets/css/main.css",
    "uniform": "sass --load-path=./ --no-source-map main.scss ../assets/css/main.css --style compressed"
  },
  "keywords": [
    "css",
    "sass",
    "flexbox",
    "framework",
    "responsive",
    "utility first"
  ],
  "author": {
    "name": "Jin Su Park",
    "email": "jinsupark@icloud.com",
    "url": "https://jinsupark.com/"
  },
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.32.8"
  }
}
